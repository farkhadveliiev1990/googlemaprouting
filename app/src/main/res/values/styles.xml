<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMainWhite</item>
        <item name="colorPrimaryDark">@color/colorMainWhite</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="txt.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="txt.18.black">
        <item name="android:textColor">@color/colorMainBlack</item>
    </style>

    <style name="txt.18.white">
        <item name="android:textColor">@color/colorMainWhite</item>
    </style>

    <style name="txt.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="txt.16.green">
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>

    <style name="txt.16.blue">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="txt.16.gray">
        <item name="android:textColor">@color/colorMainLightGray</item>
    </style>

    <style name="txt.16.black">
        <item name="android:textColor">@color/colorMainBlack</item>
    </style>

    <style name="txt.16.white">
        <item name="android:textColor">@color/colorMainWhite</item>
    </style>

    <style name="txt.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="txt.14.gray">
        <item name="android:textColor">@color/colorMainLightGray</item>
    </style>

    <style name="txt.14.white">
        <item name="android:textColor">@color/colorMainWhite</item>
    </style>


    <style name="llt_horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="llt_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="llt_calendar_cell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="vertical_line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#30000000</item>
    </style>

    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#30000000</item>
    </style>

    <style name="horizontal_line_big">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#50000000</item>
    </style>

    <style name="app_toolbar">
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorMainWhite</item>
        <item name="android:elevation">5dp</item>
    </style>

</resources>
