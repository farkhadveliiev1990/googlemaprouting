<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llt_route_back"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_4"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_check"
            android:layout_marginStart="8dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_circle_green"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_marginStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lbl_route_id"
                    style="@style/txt.18.black"
                    android:text="#77"/>

                <TextView
                    android:id="@+id/lbl_route_name"
                    android:layout_marginStart="12dp"
                    style="@style/txt.18.black"
                    android:textStyle="italic"
                    android:lines="1"
                    android:text="Marja Brussaard-van 't Zelfde"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lbl_route_address"
                        style="@style/txt.14.gray"
                        android:textColor="@color/colorMainBlack"
                        android:textStyle="italic"
                        android:lines="1"
                        android:text="Marja Brussaard-van 't Zelfde"/>

                    <TextView
                        android:id="@+id/lbl_route_city"
                        style="@style/txt.14.gray"
                        android:textColor="@color/colorMainBlack"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"
                        android:text="City"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/llt_horizontal" />

                <TextView
                    android:id="@+id/lbl_router_done"
                    style="@style/txt.16.green"
                    android:textStyle="bold"
                    android:text="Done" />

                <ImageView
                    android:id="@+id/img_router"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_right_arrow_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_marginStart="8dp"
                    android:id="@+id/lbl_route_phone"
                    style="@style/txt.16.black"
                    android:text="02096227257"/>

                <TextView
                    android:layout_marginStart="20dp"
                    android:id="@+id/lbl_route_time"
                    style="@style/txt.16.black"
                    android:text="14:09:28"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>